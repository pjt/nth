# <http://www.gnu.org/licenses/>.


# Find nth home, resolving symlinks
# cf. Stackoverflow treatment, http://bit.ly/AhZ8q
function resolve() {
   local PRG ls link
   PRG=$1
   while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
      PRG="$link"
    else
      PRG="`dirname "$PRG"`/$link"
    fi
   done
   echo $PRG
}
export NTH_HOME=`resolve $0`/../..
NTH_SRC="${NTH_HOME}/src"

NG=`ps | grep -e "[N]GServer"`
if [ -n "$NG" ];
then
	case `basename $0` in
		"twinc")
		exec ng clojure.main "${NTH_SRC}/gropius/sramsay/nth/twinc.clj" | sort;;
		"tweet")
		shift
		exec ng clojure.main "${NTH_SRC}/gropius/sramsay/nth/tweet.clj" "$@";;
		"tscan")
		exec ng clojure.main "${NTH_SRC}/gropius/sramsay/nth/tscan.clj" | sort;;
		"tshow")
		shift
		exec ng clojure.main "${NTH_SRC}/gropius/sramsay/nth/tshow.clj" "$@";;
	esac
else
   CP=$NTH_HOME/lib/*:$NTH_HOME/classes:$NTH_HOME/src
   # '/*'-glob for classpath requires Java 1.6
   exec java -cp $CP gropius.sramsay.nth `basename $0` "$@"
fi
